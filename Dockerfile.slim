# Ultra-lightweight Docker build for production
FROM python:3.11-slim

# Install only essential system dependencies
RUN apt-get update && apt-get install -y \
    libpq5 \
    # For EasyOCR and image processing
    libjpeg62-turbo \
    libfreetype6 \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user
RUN useradd --create-home --shell /bin/bash app
USER app
WORKDIR /home/app

# Copy and install requirements
COPY --chown=app:app requirements.txt .
# Force CPU-only installation by setting environment variables
ENV FORCE_CUDA=0
ENV TORCH_CUDA_ARCH_LIST=""
RUN pip install --no-cache-dir --user -r requirements.txt

# Copy application code
COPY --chown=app:app . .

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/health')"

# Run the application with minimal workers for smaller memory footprint
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]